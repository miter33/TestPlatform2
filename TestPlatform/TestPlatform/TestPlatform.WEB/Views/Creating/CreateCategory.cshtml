@model Category
@{
    ViewData["Title"] = "Создание теста";
}

<form method="post" asp-action="CreateCategory">
    <div class="form-group">
        <label>Введите название категории</label>
        <input class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-success" style="width:25%">Сохранить категорию</button>
        <a asp-action="GetListCategories" style="width:25%" class="btn btn-secondary">Перейти к перечню категорий</a>
    </div>
</form>