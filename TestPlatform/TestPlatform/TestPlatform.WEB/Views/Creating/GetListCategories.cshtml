@model IEnumerable<Category>
@{
    ViewData["Title"] = "Создание теста";
    int i = 0;
}

@if (TempData["message"] != null)
{
    <div class="alert alert-success">@TempData["message"]</div>
}

<table class="table table-bordered table-warning">
    <thead class="thead-dark">
        <tr class="table-primary text-center">
            <th>#</th>
            <th>Категория</th>
            <th>Количество тестов</th>
            <th>Создание нового теста</th>
        </tr>
    </thead>
    @foreach (var category in Model)
    {
        <tbody>
            <tr class="text-center">
                <th class="align-middle">@(++i)</th>
                <td class="align-middle">@category.Name</td>
                <td class="align-middle">@category.Test.Count</td>
                <td class="align-middle">
                    <a asp-action="GetListTests" asp-route-id="@category.Id" class="btn btn-primary">Перейти к категории</a>
                </td>
            </tr>
        </tbody>
    }
</table>
<div class="text-center">
    <a asp-action="CreateCategory" class="btn btn-primary" style="width:25%">Создать новую категорию</a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary" style="width:25%">Выйти в меню</a>
</div>
